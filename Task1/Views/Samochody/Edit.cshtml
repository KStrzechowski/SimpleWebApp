@model Task1.Models.Samochod

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj</h1>

<h4>Samochód</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SamochodId" />
            <div class="form-group">
                <label asp-for="Pojemnosc" class="control-label">Pojemność</label>
                <input asp-for="Pojemnosc" class="form-control" />
                <span asp-validation-for="Pojemnosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label">Cena</label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
