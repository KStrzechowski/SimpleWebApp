@model IEnumerable<Task1.Models.Osoba>

@{
    ViewData["Title"] = "Osoby";
}

<h1>Osoby</h1>

<p>
    <a asp-action="Create">Dodaj nową osobę</a>
    <a asp-action="Search" style="float:right">Wyszukaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Imię", "Index", new { sortOrder = ViewBag.FirstNameSortParm })
            </th>
            <th>
                @Html.ActionLink("Nazwisko", "Index", new { sortOrder = ViewBag.LastNameSortParm })
            </th>
            <th>
                @Html.ActionLink("Data Produkcji", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                @Html.ActionLink("ID Samochodu", "Index", new { sortOrder = ViewBag.SamochodIdSortParm })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @{
                    #nullable enable
                    string? parameterValue = item.DataProd != null ? item.DataProd.Value.ToShortDateString() : null;
                }
                @Html.DisplayFor(modelItem => parameterValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Samochod.SamochodId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OsobaId">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.OsobaId">Detale</a> |
                <a asp-action="Delete" asp-route-id="@item.OsobaId">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
