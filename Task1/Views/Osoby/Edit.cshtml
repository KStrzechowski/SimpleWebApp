@model Task1.Models.Osoba

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj</h1>

<h4>Osoba</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OsobaId" />
            <div class="form-group">
                <label asp-for="Imie" class="control-label">Imię</label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label">Nazwisko</label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SamochodId" class="control-label">ID Samochodu</label>
                <select asp-for="SamochodId" class="form-control" asp-items="ViewBag.SamochodId"></select>
                <span asp-validation-for="SamochodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataProd" class="control-label">Data Produkcji</label>
                <input asp-for="DataProd" class="form-control" />
                <span asp-validation-for="DataProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
